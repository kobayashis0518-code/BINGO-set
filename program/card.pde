void draw() {
  background(255, 50, 50);       // 背景色を赤系に設定
  fill(230);                      // 四角形の色をグレー系に設定
  rect(15, 15, 300, 60);          // 上部の帯を描画（BINGO文字用）

  fill(250, 250, 0);              
  ellipse(165, 235, 55, 55);      // 中央の円（デフォルトで黄色に）

  textSize(50);                    // 数字表示用フォントサイズ
  fill(0);                         // 数字の色を黒に設定

  // ビンゴカードの5x5マスを描画
  for (int i = 0; i < 5; i++) {
    for (int j = 0; j < 5; j++) { 
      
      if(test[i][j] == -1){       // 真ん中フリーマスの場合
        textSize(20);              // フリーの文字サイズを小さめに
        fill(255,50,50);           // フリー文字の色を赤に
        text("FREE!", 20 + i * 60, 123 + j * 60); // フリー文字を表示
        textSize(50);              // 元の文字サイズに戻す
        fill(0);                   // 色を黒に戻す
      } 
      else{
        if(press[i][j] == -1){    // そのマスが押されている場合
          fill(255,255,0);         // 押下マスの色を黄色に
          ellipse(45 + i*60, 115 + j*60, 55, 55); // 円を描画
        }
        else{                      // 押されていない場合
          fill(230);               // 通常のグレー色
          ellipse(45 + i*60, 115 + j*60, 55, 55);
        }

        fill(0);                   // 数字の色を黒に
        if(test[i][j] < 10){       // 1桁の数字は位置を調整
          text(test[i][j], 33 + i*60, 130 + j*60);
        }
        else{                      // 2桁の数字は位置を調整
          text(test[i][j], 20 + i*60, 130 + j*60);
        }
      }
    }
  }

  // BINGO文字の描画
  textSize(70);
  fill(255,0,0); text("B", 25, 70);
  fill(0,0,255); text("I", 95, 70);
  fill(0,255,0); text("N", 145, 70);
  fill(255,255,0); text("G", 205, 70);
  fill(255,0,255); text("O", 265, 70);
}
