void mousePressed() {

  // 5x5の全てのマスをチェック
  for(int i = 0; i < 5; i += 1){
    for(int j = 0; j < 5; j += 1){

      // マウス位置とマスの中心との距離の二乗を計算
      // 半径30の円なので、距離の二乗 <= 900 で判定
      if((mouseX - (45 + i * 60)) * (mouseX - (45 + i * 60)) 
         + (mouseY - (115 + j * 60)) * (mouseY - (115 + j * 60)) <= 900){
          
        // マスがクリックされた場合、pressの値を反転
        // 1 → -1, -1 → 1 のように切り替える
        press[i][j] = press[i][j] * -1;
      }
    }
  }
}
